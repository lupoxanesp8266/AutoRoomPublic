<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/modo"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/modoLeds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/backboton"
                android:text="@string/init"
                android:textAlignment="center"
                android:textColor="@color/negroMio"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/blancoRLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/blanco_derecha"
                    android:textAlignment="center"
                    android:textColor="@color/Blanco_seeek"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/blancorStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/gaugeBlancoR"
                    android:layout_alignTop="@+id/gaugeBlancoR"
                    android:layout_alignEnd="@+id/gaugeBlancoR"
                    android:layout_alignBottom="@+id/gaugeBlancoR"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="8dp"
                    android:text="@string/init"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <pl.pawelkleczkowski.customgauge.CustomGauge
                    android:id="@+id/gaugeBlancoR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="30dp"
                    app:gaugeDividerColor="@color/white"
                    app:gaugeEndValue="100"
                    app:gaugePointEndColor="@color/md_blue_grey_800"
                    app:gaugePointStartColor="@color/md_blue_grey_800"
                    app:gaugeStartAngle="270"
                    app:gaugeStartValue="0"
                    app:gaugeStrokeCap="SQUARE"
                    app:gaugeStrokeColor="@color/md_blue_grey_100"
                    app:gaugeStrokeWidth="10dp"
                    app:gaugeSweepAngle="360" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/blancoLLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/blanco_izquierda"
                    android:textAlignment="center"
                    android:textColor="@color/Blanco_seeek"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/blancolStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/gaugeBlancoL"
                    android:layout_alignTop="@+id/gaugeBlancoL"
                    android:layout_alignEnd="@+id/gaugeBlancoL"
                    android:layout_alignBottom="@+id/gaugeBlancoL"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="8dp"
                    android:text="@string/init"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <pl.pawelkleczkowski.customgauge.CustomGauge
                    android:id="@+id/gaugeBlancoL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="30dp"
                    app:gaugeDividerColor="@color/white"
                    app:gaugeEndValue="100"
                    app:gaugePointEndColor="@color/md_blue_grey_800"
                    app:gaugePointStartColor="@color/md_blue_grey_800"
                    app:gaugeStartAngle="270"
                    app:gaugeStartValue="0"
                    app:gaugeStrokeCap="SQUARE"
                    app:gaugeStrokeColor="@color/md_blue_grey_100"
                    app:gaugeStrokeWidth="10dp"
                    app:gaugeSweepAngle="360" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/rojoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/gaugeRojos"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/led_s_rojos"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/rojosStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/gaugeRojos"
                    android:layout_alignTop="@+id/gaugeRojos"
                    android:layout_alignEnd="@+id/gaugeRojos"
                    android:layout_alignBottom="@+id/gaugeRojos"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="8dp"
                    android:text="@string/init"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <pl.pawelkleczkowski.customgauge.CustomGauge
                    android:id="@+id/gaugeRojos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="0dp"
                    app:gaugeDividerColor="@color/white"
                    app:gaugeEndValue="100"
                    app:gaugePointEndColor="@color/md_red_700"
                    app:gaugePointStartColor="@color/md_red_700"
                    app:gaugeStartAngle="270"
                    app:gaugeStartValue="0"
                    app:gaugeStrokeCap="SQUARE"
                    app:gaugeStrokeColor="@color/md_blue_grey_100"
                    app:gaugeStrokeWidth="10dp"
                    app:gaugeSweepAngle="360" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/verdeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/led_s_verdes"
                    android:textAlignment="center"
                    android:textColor="@color/Verde_seek"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/verdesStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/gaugeVerdes"
                    android:layout_alignTop="@+id/gaugeVerdes"
                    android:layout_alignEnd="@+id/gaugeVerdes"
                    android:layout_alignBottom="@+id/gaugeVerdes"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="8dp"
                    android:text="@string/init"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <pl.pawelkleczkowski.customgauge.CustomGauge
                    android:id="@+id/gaugeVerdes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="0dp"
                    app:gaugeDividerColor="@color/white"
                    app:gaugeEndValue="100"
                    app:gaugePointEndColor="@color/md_green_700"
                    app:gaugePointStartColor="@color/md_green_700"
                    app:gaugeStartAngle="270"
                    app:gaugeStartValue="0"
                    app:gaugeStrokeCap="SQUARE"
                    app:gaugeStrokeColor="@color/md_blue_grey_100"
                    app:gaugeStrokeWidth="10dp"
                    app:gaugeSweepAngle="360" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/blancoCLabels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/blanco_cama"
                android:textAlignment="center"
                android:textColor="@color/backSystem"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/blancocStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/gaugeCama"
                android:layout_alignTop="@+id/gaugeCama"
                android:layout_alignEnd="@+id/gaugeCama"
                android:layout_alignBottom="@+id/gaugeCama"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="8dp"
                android:text="@string/init"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <pl.pawelkleczkowski.customgauge.CustomGauge
                android:id="@+id/gaugeCama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:gaugeDividerColor="@color/white"
                app:gaugeEndValue="70"
                app:gaugePointEndColor="@color/backSystem"
                app:gaugePointStartColor="@color/backSystem"
                app:gaugeStartAngle="270"
                app:gaugeStartValue="0"
                app:gaugeStrokeCap="SQUARE"
                app:gaugeStrokeColor="@color/md_blue_grey_100"
                app:gaugeStrokeWidth="10dp"
                app:gaugeSweepAngle="360" />

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>